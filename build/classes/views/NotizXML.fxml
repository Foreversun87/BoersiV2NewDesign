   <top>
      <MenuBar BorderPane.alignment="CENTER">
         <menus>
             <Menu text="File">
                <items>
                    <MenuItem onAction="#onSave" text="Save" />
                    <MenuItem onAction="#onClose" text="Close" />
                </items>
             </Menu>
   
             <Menu text="Help">
      <items>
                    <MenuItem onAction="#onAbout" text="About" />
      </items>
             </Menu>
         </menus>
      </MenuBar>
   </top>

   <center>
      <TextArea fx:id="areaText" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <HBox prefHeight="50.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="lblMeldung" prefHeight="50.0" prefWidth="807.0" />
